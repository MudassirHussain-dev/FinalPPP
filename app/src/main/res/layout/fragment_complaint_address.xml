<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="20sp"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="ADDRESSEE DETAIL"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:text="Add Addressee Detail"
                android:textColor="@color/colorPrimary"
                android:textSize="8sp"
                android:textStyle="italic" />


            <EditText
                android:id="@+id/et_addressName"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_below="@+id/txt_enter"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/bac_ground"
                android:gravity="center"
                android:hint="Addressee Name"
                android:singleLine="true"></EditText>

            <EditText
                android:id="@+id/et_AddressMobileno"
                android:layout_width="300dp"
                android:layout_height="44dp"
                android:layout_below="@+id/txt_enter"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/bac_ground"
                android:gravity="center"
                android:hint="Mobile Number"
                android:inputType="number"
                android:singleLine="true"></EditText>


            <EditText
                android:id="@+id/et_addressCity"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_below="@+id/txt_enter"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/bac_ground"
                android:gravity="center"
                android:hint="Addressee City"
                android:singleLine="true"></EditText>


            <EditText
                android:id="@+id/et_addressAddress"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_below="@+id/txt_enter"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/bac_ground"
                android:gravity="center"
                android:hint="Addressee Address"
                android:singleLine="true"></EditText>
            <EditText
                android:id="@+id/et_addressEmail"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_below="@+id/txt_enter"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/bac_ground"
                android:gravity="center"
                android:hint="Addressee Email"
                android:singleLine="true"></EditText>



            <!-- <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:layout_marginTop="40dp"
                 android:text="Please Select the following Services Category"
                 android:textColor="@color/colorPrimary"
                 android:textSize="10dp" />

             <Spinner
                 android:id="@+id/spinner_register_complaint"
                 android:layout_width="300dp"
                 android:layout_height="50dp"
                 android:layout_gravity="center"
                 android:background="@drawable/bac_ground"
                 android:textAlignment="center"></Spinner>-->

            <Button
                android:id="@+id/btn_final_create_complaint"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="25dp"
                android:background="@color/colorPrimary"
                android:text="CREATE COMPLAINT"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>