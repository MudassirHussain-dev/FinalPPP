<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20sp"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="REGISTER COMPLAINT"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="Please Select the following Services Category"
                android:textColor="@color/colorPrimary"
                android:textSize="10dp" />

            <Spinner
                android:id="@+id/spinner_register_complaint"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/bac_ground"
                android:entries="@array/Services"
                android:prompt="@string/PostServices"
                android:textAlignment="center"></Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="-30dp"
                android:text="Please Enter Article No To Register Complaint"
                android:textColor="@color/colorPrimary"
                android:textSize="10dp" />


            <EditText
                android:id="@+id/et_article_complaint_number"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_below="@+id/txt_enter"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/bac_ground"
                android:hint="e.g 74469192"
                android:inputType="number"
                android:textAlignment="center"></EditText>


            <Button
                android:id="@+id/btn_create_complaint"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="35dp"
                android:background="@color/colorPrimary"
                android:text="CREATE COMPLAINT"
                android:textColor="@color/white" />
        </LinearLayout>


    </ScrollView>
</RelativeLayout>