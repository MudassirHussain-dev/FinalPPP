<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="20sp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="CALCULATE TARRIF"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Please Enter Weight in Gram"
                android:textColor="@color/colorPrimary"
                android:textSize="10dp" />

            <EditText
                android:id="@+id/et_calculate_tarrif"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/bac_ground"
                android:gravity="center"
                android:hint="Weight(gram)"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:text="Please Select the following Services Category"
                android:textColor="@color/colorPrimary"
                android:textSize="10dp" />

            <Spinner
                android:id="@+id/spinner_calculate_tarrif"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/bac_ground"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btn_tarrif_caculate"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_article_number"
                android:layout_gravity="center"
                android:layout_marginTop="27dp"
                android:background="@color/colorPrimary"
                android:text="CALCULATE POSTAGE"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/txt_border"
                android:padding="10dp"
                android:text="Note:\nThe Tariff is subjected to levy of General Sales Tax @ 16% where Provincial Government charge 16% GST and 17% where Provincial Government charge 17% GST on Courier Services."
                android:textColor="@color/colorPrimary"
                android:textSize="10dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
