<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107"
    android:padding="10sp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feedback"
            android:textStyle="bold"
            android:textColor="@color/bc_primry"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We have BiG ears!! We are listning!!"
            android:textColor="@color/bc_primry"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Name*"
            android:textColor="@color/bc_primry"
            android:layout_gravity="start"
            android:layout_marginTop="25dp"/>
       <EditText
           android:id="@+id/et_feedbackyouname"
           android:layout_width="300dp"
           android:layout_height="40dp"
           android:background="@color/white"
           android:layout_marginLeft="90dp"
           android:singleLine="true"
           android:inputType="textPersonName"
           android:layout_marginTop="-25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile No*"
            android:textColor="@color/bc_primry"
            android:layout_gravity="start"
            android:layout_marginTop="25dp"/>
        <EditText
            android:id="@+id/et_feedbackmobileno"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:layout_marginLeft="90dp"
            android:singleLine="true"
            android:inputType="number"
            android:layout_marginTop="-25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email ID*"
            android:textColor="@color/bc_primry"
            android:layout_gravity="start"
            android:layout_marginTop="25dp"/>
        <EditText
            android:id="@+id/et_feedbackemailid"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:layout_marginLeft="90dp"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:layout_marginTop="-25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please write the Feedback"
            android:textColor="@color/bc_primry"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"/>
        <EditText
            android:id="@+id/et_feedbackwritethefeedback"
            android:layout_width="330dp"
            android:layout_height="90dp"
            android:background="@color/white"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:background="@color/bc_primry"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/btn_feedbacksubmit"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In case your feedback gives us a new way to improve our service in any which way only the first feedback(in case similar feedbacks are reciever)will be eligible.\n\ncontacthafizmudassir@gmail.com"
            android:textColor="@color/bc_primry"
            android:layout_gravity="start"
            android:layout_marginTop="25dp"/>


    </LinearLayout>
    </ScrollView>

</LinearLayout>